[logic] 
active = sr_idle@wait 

[sr_idle@wait] 
on_info = {+story_mode_disabled} sr_idle@wait2 
on_info2 = {+bar_deactivate_radar_done} sr_idle@wait2 

[sr_idle@wait2] 
on_actor_inside = sr_idle@run %=run_tutorial(tutorial_sleep)% 

[sr_idle@run] 
on_info = {+tutorial_sleep} %-tutorial_sleep =run_tutorial(tutorial_sleep)% 
on_actor_outside = {+tutorial_sleep} sr_idle@wait2, sr_idle@wait2 %=stop_tutorial% 
on_info2 = {!has_active_tutorial -sleep_active} sr_idle@wait2 