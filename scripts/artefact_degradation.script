local belted_arts = {}
local sysini = system_ini()
local imm_mul, mul, feature_is_active

local function dummy()

end

local function main_loop()
	local tg = time_global()
	if (_tmr and tg < _tmr) then 
		return false 
	end
	_tmr = tg + 2000	-- if you change this value timed artefact multipliers will need changes 
	
	if not (db.actor) then
		return 
	end
	
	for art_id,active in pairs(belted_arts) do
		if (active) then
			timed_artifact_cond(art_id)
		end
	end
end

function activate_feature()
	if (feature_is_active) then
		return 
	end
	feature_is_active = true
	
	imm_mul = {					-- correction factors for hit events
		["light_burn"] = 1.0,
		["burn"] = 1.0,
		["strike"] = 1.0,
		["shock"] = 1.0,
		["wound"] = 1.0,
		["radiation"] = 1.0,
		["telepatic"] = 1.0,
		["chemical_burn"] = 1.0,
		["explosion"] = 1.0,
		["fire_wound"] = 1.0,
	}

	mul = {						-- correction factors for timed checks
		["health"]		= 0.1,		-- updated often while slotted so don't set too high
		["radiation"] 	= 1,
		["satiety"] 	= 1,
		["power"] 		= 0.3,		-- updated often while slotted so don't set too high
		["bleeding"] 	= 0.5,
		["psy_health"] 	= 1,
		["weight"]		= 0.0001, 	-- updated often while slotted so don't set too high
	}
	RegisterScriptCallback("actor_on_item_drop",actor_on_item_drop)
	RegisterScriptCallback("actor_on_before_hit",actor_on_before_hit)
	RegisterScriptCallback("actor_item_to_belt",actor_item_to_belt)
	level.add_call(main_loop,dummy)
end 

function deactivate_feature()
	if not (feature_is_active) then
		return 
	end
	feature_is_active = false
	
	level.remove_call(main_loop,dummy)
	UnregisterScriptCallback("actor_on_item_drop",actor_on_item_drop)
	UnregisterScriptCallback("actor_on_before_hit",actor_on_before_hit)
	UnregisterScriptCallback("actor_item_to_belt",actor_item_to_belt)	
end

function on_game_start()
	if (axr_main.config:r_value("mm_options","enable_art_degrade",1,false) == false) then
		return 
	end
	activate_feature()
end

