-- Wealthy Client
function wealthy_functor()
	if not (db.actor) then 
		return false 
	end
	if db.actor:money() >= 1000000 and not has_alife_info("actor_wealthy") then
		db.actor:give_info_portion("actor_wealthy")
		news_manager.send_tip(db.actor, "st_achievement_1_unlock", nil, "wealthy", nil, nil)
	end
	return has_alife_info("actor_wealthy")
end

-- Well Dressed
function well_dressed_functor()
	if not (db.actor) then
		return false
	end
	if (has_alife_info("actor_well_dressed")) then
		return true
	end
	if (xr_statistic.actor_statistic.killed_monsters >= 500) then
		db.actor:give_info_portion("actor_well_dressed")
		news_manager.send_tip(db.actor, "st_achievement_5_unlock", nil, "mutant_hunter", nil, nil)
	end
	return has_alife_info("actor_well_dressed")
end