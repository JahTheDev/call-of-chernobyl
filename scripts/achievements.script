-- Trafficker of Information
function information_dealer_functor()
	if not (db.actor) then 
		return false 
	end
	if has_alife_info("actor_information_dealer") then
		return true
	end
	if (has_alife_info("actor_information_dealer_trigger")) then
		db.actor:give_info_portion("actor_information_dealer")
		news_manager.send_tip(db.actor, "st_achievement_3_unlock", nil, "information_dealer", nil, nil)
	end
	return has_alife_info("actor_information_dealer")
end

-- Marked by the Zone
function marked_by_zone_functor()
	if not (db.actor) then 
		return false 
	end
	if has_alife_info("actor_marked_by_zone_3_times") then
		return true
	end
	if (character_community(db.actor) == "actor_monolith") then 
		return true 
	end
	local counter_name = "actor_marked_by_zone_cnt"
	local cnt_value = xr_logic.pstor_retrieve(db.actor, counter_name, 0)
	if cnt_value > 2 then
		db.actor:give_info_portion("actor_marked_by_zone_3_times")
		news_manager.send_tip(db.actor, "st_achievement_2_unlock", nil, "marked_by_zone", nil, nil)
		return true
	end
	return false
end

