	self.search_velocity       = utils.cfg_get_number( ltx, section, "search_velocity",      self.object, true )
	self.round_velocity        = utils.cfg_get_number( ltx, section, "round_velocity",       self.object, true )

	--[[
	self.vis_time_quant        = utils.cfg_get_number( ltx, section, "vis_time_quant",       self.object, true )
	self.vis_threshold         = utils.cfg_get_number( ltx, section, "vis_threshold",        self.object, true )
	self.vis_inc               = utils.cfg_get_number( ltx, section, "vis_inc",              self.object, true ) * self.vis_time_quant * 0.001
	self.vis_dec               = utils.cfg_get_number( ltx, section, "vis_dec",              self.object, true ) * self.vis_time_quant * 0.001
	self.vis                   = 0
	self.vis_next_time         = 0
	--]]

	self.forget_timeout        = utils.cfg_get_number( ltx, section, "forget_timeout",       self.object, true ) * 1000

	self.flame_start_health    = utils.cfg_get_number( ltx, section, "flame_start_health",   self.object, true )

	self.attack_before_retreat = false
	self.enemy_forgetable      = true
	self.section_changed       = false
	debug_combat_type          = nil
	
