	self.search_attack_dist    = utils.cfg_get_number( ltx, section, "search_attack_dist",   self.object, true )
	self.default_safe_altitude = utils.cfg_get_number( ltx, section, "safe_altitude",        self.object, true ) + self.level_max_y
